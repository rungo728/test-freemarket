.header
  .upper-row
    = link_to '#' do
      = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?4194600336", alt: "merucari", class: 'mercari-icon'
    //ログイン時
    .upper-row__user
      .user-information
        = link_to '#' do
          = fa_icon 'bell', class: 'icon'
      .user-information
        = link_to '#' do 
          = fa_icon 'check', class: 'icon'
      .user-information
        = link_to '#', class: 'userpage-link' do
          = image_tag 'mrkr-icon.png', class: 'user-icon', size: '32x32'
