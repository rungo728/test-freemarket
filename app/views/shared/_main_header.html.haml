  .center-row__search
    %form
      %input.center-row__search--input{name: "search", placeholder: "何をお探しですか？", type: "search", style: "width: 100%; height: 40px;"}
      %button.center-row__search--button{title: "検索", type: "submit" }
        = fa_icon 'search'
  %nav.under-row
