.sign_in  
  .single-container
    .single-header
      %h1

  .single-main
    .login-panel
      .login-panel__no-account
        %p
          アカウントをお持ちでない方はこちら
        %h2
          = link_to new_registration_path(resource_name) do
            新規会員登録
      .login-panel__form-inner
        %h2.facebook-login
          = link_to "" do
            Facebookでログイン
        %h2.google-login
          = link_to "" do
            Googleでログイン

      .user-form-for
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            = f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "input-basic"
          .field
            = f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "input-last"
          .no-robot
            .no-robot__left
              %input.no-robot__left__checkbox{:type => "checkbox"}
              %p
            　  私はロボットでは</br>ありません。
            .no-robot__right
              = image_tag("https://www.gstatic.com/recaptcha/api2/logo_48.png")
              %p reCAPTCHA
              %p プライバシー・利用規約
          .actions
            = f.submit "ログイン", class: "login_btn"
      .form-after
        =link_to "" do
          パスワードをお忘れの方
  .fotter-gray
    .fotter-gray__box
      %nav
        %ul
          %li
            = link_to "" do
              プライバシーポリシー
          %li
            = link_to "" do
              利用規約
          %li
            = link_to "" do
              特定商取引に関する表記

      = link_to "", class: "fotter-logo" do
        =image_tag("fotter/logo-gray.svg")
      %p.fotter__copyright © 2019 Mercari