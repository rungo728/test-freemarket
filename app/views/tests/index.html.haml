.header
  / ヘッダー上段
  .upper-row
    / ヘッダーロゴ
    .upper-row__logo
      .upper-row__logo--mark
        = link_to root_path do
          = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?4194600336", alt: "merucari"
    / 検索フォーム    
    .upper-row__search
      %input.upper-row__search--input{name: "search", placeholder: "何かお探しですか？", type: "search", style: "width: 800px; height: 40px;"}
      %button.upper-row__search--button{title: "検索", type: "submit"}
  .under-row
    .under-row__category
      = link_to '#' do
        %ul.under-row__category--lists
          %li.list-tag
            = fa_icon 'list', class: 'icon-list'
          %li.list-name
            カテゴリーから探す
    .under-row__brand
      = link_to '#' do
        %ul.under-row__brand--lists
          %li.list-tag
            = fa_icon 'tag', class: 'icon-list'
          %li.list-name
            ブランドから探す
      -# ユーザーがログインしている時。各種情報。リンクは仮置き。
    -if user_signed_in?
      %ul.under-row__lists
        %li.list
          = link_to '#' do
            = fa_icon 'heart', class: 'icon'
        %a.list-name
          = link_to '#' do
            いいね！一覧
        %li.list
          = link_to '#' do
            = fa_icon 'bell', class: 'icon'
        %a.list-name
          = link_to '#' do
            お知らせ
        %li.list
          = link_to '#' do 
            = fa_icon 'check', class: 'icon'
        %a.list-name
          = link_to '#' do
            やることリスト
        %li.list
          = link_to '#' do
            = fa_icon 'smile', class: 'icon'
        %a.list-name
          = link_to '#' do
            マイページ
      -# ユーザーがログインしていない時。新規登録、ログイン部分。
    - else
      .under-row__user
        .under-row__user__registration
          =link_to step1_signup_index_path(),class: "under-row__user__registration-btn__text" do
            新規会員登録
          =link_to new_user_session_path(),class: "under-row__user__login-btn__text" do
            ログイン

